@{
    Layout = null;
}


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Form</title>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div>
        <form action="/Produto/Adiciona" method="post">

            <div class="form-group">
                <label for="nome">Nome:</label>
                <input id="nome" name="pmodel.Nome" class="form-control" />
            </div>

            <div class="form-group">
                <label for="preco">Preço:</label>
                <input id="preco" name="pmodel.Preco" class="form-control" />
            </div>

            <div class="form-group">
                <label for="quantidade">Quantidade:</label>
                <input id="quantidade" name="pmodel.Quantidade" class="form-control" />
            </div>

            <div class="form-group">
                <label for="descricao">Descrição:</label>
                <input id="descricao" name="pmodel.Descricao" class="form-control" />
            </div>

            <div class="form-group">
                <label for="categoria">Categoria:</label>
                <select id="categoria" name="pmodel.CategoriaId" class="form-control">
                    @foreach (var categoria in ViewBag.Categorias)
                    {
                        <option value="@categoria.Id">@categoria.Nome</option>
                    }
                </select>
            </div>

            <input type="submit" class="btn btn-default" />
        </form>
    </div>
</body>
</html>
